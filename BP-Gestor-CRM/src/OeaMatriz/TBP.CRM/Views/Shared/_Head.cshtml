    <style>
        /* ====== Switch Styles ====== */
        .form-check-input {
            width: 3em;
            height: 1.5em;
            background-color: #e9ecef;
            border: 2px solid #e9ecef;
            appearance: none;
            border-radius: 1.5em;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }

            .form-check-input:checked {
                background-color: #99C23B;
                border-color: #99C23B;
            }

            .form-check-input::before {
                content: "";
                position: absolute;
                top: 0.1em;
                left: 0.1em;
                width: 1.3em;
                height: 1.3em;
                background-color: #fff;
                border-radius: 50%;
                transition: transform 0.3s ease-in-out;
            }

            .form-check-input:checked::before {
                transform: translateX(1.5em);
            }

        /* Versiones personalizadas */
        .form-switch-light-warning:checked {
            background-color: #fff3cd;
            border-color: #fff3cd;
        }

        .form-switch-light-success:checked {
            background-color: #d1e7dd;
            border-color: #d1e7dd;
        }

        .form-switch-light-danger:checked {
            background-color: #f8d7da;
            border-color: #f8d7da;
        }

        /* ====== Estilos para acciones ====== */
        .td-acciones {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .td-acciones a {
                text-decoration: none;
                color: #023840;
                font-weight: 500;
            }

                .td-acciones a:hover {
                    color: #99C23B;
                }
    </style>

    <meta name="request-verification-token" content="@__aft.RequestToken" />
</head>
